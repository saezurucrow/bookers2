<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'users/userinfo', user: @user %>
 <%= render 'books/newbook', book: @book %>  <% end %>

 <div class="container">
    <div class="col-xs-9">
 <h2>
  <span>Books</span>
 </h2>

<table class="table table-condensed">
            <thead>
              <tr>
                <th>User</th>
                <th>Title</th>
                <th>Opiniton</th>
              </tr>
            </thead>
           <% @books.each do |book| %>
            <tbody>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            </tbody>
            <% end %>
</table>
</div>
</div>

