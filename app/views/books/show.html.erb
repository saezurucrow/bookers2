<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @new_book %>
<div class="container">
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th colspan="3"></th>
          <% if @book.user == current_user %>
            <th colspan="2"></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><%= link_to "edit", edit_book_path(@book), class: "btn btn-success"%></td>
          <td><%= link_to "destroy", book_path(@book), method: :delete,class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= link_to @book.user.name, user_path(@book.user) %>さん

  <div class="float-wrapper">
    <h4 class="comment-count"><%= @book.book_comments.count %>件コメント</h4>
  </div>

  <ol>
    <% @book.book_comments.each do |book_comment| %>
        <li class="comment">
            <div class="comment-body bb">
                <div class="comment-avatar">
                    <div class="avatar">
                      <%= attachment_image_tag book_comment.user, :profile_image,  size:'50x50', format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                    </div>
                </div>
                <div class="comment-text">
                    <div class="comment-author clearfix">
                        <a href="#" class="link-author"><%= book_comment.user.name %></a>
                        <span class="comment-meta">
                          <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
                          <span><%= book_comment.comment %></span>
                        </span>
                    </div>
                </div>
            </div>
        </li>
    <% end %>
</ol>

<%= form_for [@book, @book_comment] do |f| %>
    <div class="row">
        <div class="col-sm-12">
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
        </div>
    </div>
    <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>
</div>
</div>
